@model Cinema.Movie.Common.DashboardPageModel

@section Head {

}
<div class="col-xs-12"></div>
<div class="col-xs-1 col-md-2 col-lg-2"></div>
<div class="col-xs-12 col-sm-8 col-md-7 col-lg-6">

    @if ((string)ViewData["Title"] != "" || Model.Content != "")
    {
        <div class="box box-primary">
            <div class="box-header uppercase">
                <b>@ViewData["Title"]</b>
            </div>
            <div class="box-body box-profile">
                <div class="col-xs-12">
                    @Model.Content
                </div>
            </div>
        </div>
    }
    @if (Model.Movies != null)
    {
        { Html.RenderPartial("~/Modules/Movie/Movie/_Movies.cshtml", Model.Movies); }
    }
    else if (Model.Movie != null)
    {
        { Html.RenderPartial("~/Modules/Movie/Movie/_Movie.cshtml", Model.Movie); }
    }

    @if ((string)ViewData["Footer"] != "")
    {
        <div class="box box-primary">
            <div class="box-body box-profile">
                <div class="col-xs-12">
                    @ViewData["Footer"]
                </div>
            </div>
        </div>
    }
</div>

<div class="col-sm-3 col-md-3 col-lg-2 hidden-xs">
    <div class="box box-primary">
        <div class="box-body">
            <form action="#" method="get">
                <div class="input-group">
                    <input type="text" id="SidebarSearch" name="q" class="form-control" autocomplete="off">
                    <span class="input-group-btn">
                        <button type="button" name="search" id="search-btn" class="btn btn-flat"><i class="fa fa-search"></i></button>
                    </span>
                </div>
            </form>
        </div>
    </div>
    @{Html.RenderPartial("~/Modules/Movie/Genre/_Genres.cshtml", Model.Genres);}

</div>
<div class="col-lg-2"></div>