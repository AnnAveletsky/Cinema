@model Cinema.Movie.Common.DashboardPageModel
@{
    ViewData["Title"] = "Dashboard";
    ViewData["PageId"] = "Dashboard";
}

@section Head {

}

@section ContentHeader {
    <h1>@LocalText.Get("Navigation.Dashboard")<small>@Html.Raw(Texts.Site.Dashboard.ContentDescription)</small></h1>
}
<div class="col-xs-2">
    <div class="box box-primary">
        <div class="box-header">Категории</div>
        <div class="box-body box-profile">
            <ul class="list-group list-group-unbordered">
                @foreach (var i in Model.Genres)
                {
                <li class="list-group-item">
                    <b>@i.Name</b> <a class="pull-right"></a>
                </li>
                }
            </ul>
            <a href="#" class="btn btn-primary btn-block"><b>Follow</b></a>
        </div>
        <!-- /.box-body -->
    </div>
</div>