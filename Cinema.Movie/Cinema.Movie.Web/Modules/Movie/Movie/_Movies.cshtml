@model List<Cinema.Movie.Movie.Entities.MovieRow>


@foreach (Cinema.Movie.Movie.Entities.MovieRow item in Model)
{
    <div class="box box-primary col-xs-12">
        <div class="box-header">
            <a href="~/movie?id=@item.MovieId">@(item.TitleEn+ (item.TitleOther!=null?"/"+@item.TitleOther:""))</a>
        </div>
        <div class="box-body box-profile">
            <div class="col-xs-4 row">
                <img class="img-responsive" src="@item.PathImage" />
            </div>
            <div class="col-xs-8">
                <p>@item.Description</p>
                <p>@item.Storyline</p>
            </div>
            </div>
    </div>
}
