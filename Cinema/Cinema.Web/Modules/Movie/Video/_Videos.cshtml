@model Serenity.Services.ListResponse<Cinema.Movie.Entities.VideoRow>
@if (Model != null && Model.Entities.Count != 0)
{
    <div class="@(Model.Entities.Count > 1?"col-xs-9":"col-xs-12") no-padding">
        <iframe class="col-xs-12 no-padding" src="@Model.Entities.FirstOrDefault().Path" width="100%" height="400"
                frameborder="0" allowfullscreen></iframe>
    </div>
    if (Model.Entities.Count > 1)
    {
        <div class="col-xs-3 no-padding">
            @foreach (var video in Model.Entities)
            {
                <div class="thumbnail no-margin">
                    <img src="@video.Image" />
                    <span>@video.Title</span>
                    <span>@video.Season @video.Serie</span>
                </div>
            }
        </div>
    }
}
